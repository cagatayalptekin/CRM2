@using System.Web.Mvc.Ajax;
@model List<Application.Contracts.Roles.RoleDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var error = (string)ViewBag.Error;

}
<a class="btn btn-success" href="/Role/Yeni">Yeni Role</a>
<h2>Role Listesi</h2>
