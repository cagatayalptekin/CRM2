@model List<Application.Contracts.Tasks.TaskDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var error = (string)ViewBag.Error;

}
<a class="btn btn-success" href="/Task/Yeni">Yeni Task</a>
<h2>Task Listesi</h2>
